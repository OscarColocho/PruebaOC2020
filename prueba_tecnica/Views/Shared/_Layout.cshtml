<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <!-- CSS Files -->
    <link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/paper-dashboard.css?v=2.0.0" rel="stylesheet" />
    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link href="~/Content/assets/demo/demo.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper ">
        <div class="sidebar" data-color="white" data-active-color="danger">
            <!--
            Tip 1: You can change the color of the sidebar using: data-color="blue | green | orange | red | yellow"
        -->
            <div class="logo">
                <a href="@Url.Action("Index","Usuario")" class="simple-text logo-mini">
                    <div class="logo-image-small">
                        <img src="~/Content/assets/img/logo-small.png">
                    </div>
                </a>
                <a href="@Url.Action("Index","Usuario")" class="simple-text logo-normal">
                    TEST
                    <!-- <div class="logo-image-big">
                  <img src="../assets/img/logo-big.png">
                </div> -->
                </a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li class="active ">
                        <a href="@Url.Action("Index","Usuario")">
                            <i class="nc-icon nc-tile-56"></i>
                            <p>Inicio</p>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("About","Home")">
                            <i class="nc-icon nc-diamond"></i>
                            <p>Acerca de</p>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Contact","Home")">
                            <i class="nc-icon nc-pin-3"></i>
                            <p>Contacto</p>
                        </a>
                    </li>
                   
                </ul>
            </div>
        </div>
        <div class="main-panel">



            @RenderBody()

            </div>
            <!--   Core JS Files   -->
            <script src="~/Content/assets/js/core/jquery.min.js"></script>
            <script src="~/Content/assets/js/core/popper.min.js"></script>
            <script src="~/Content/assets/js/core/bootstrap.min.js"></script>
            <script src="~/Content/assets/js/plugins/perfect-scrollbar.jquery.min.js"></script>
            <!--  Google Maps Plugin   NO SE UTILIZA -->
            <!-- Chart JS -->
            <script src="~/Content/assets/js/plugins/chartjs.min.js"></script>
            <!--  Notifications Plugin    -->
            <script src="~/Content/assets/js/plugins/bootstrap-notify.js"></script>
            <!-- Control Center for Now Ui Dashboard: parallax effects, scripts for the example pages etc -->
            <script src="~/Content/assets/js/paper-dashboard.min.js?v=2.0.0" type="text/javascript"></script>
            <!-- Paper Dashboard DEMO methods, don't include it in your project! -->
            <script src="~/Content/assets/demo/demo.js"></script>
</body>
</html>
